@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script type="text/javascript">
        //document.getElementById("addBankAccountAdvice").onclick = $("#addDiv").load("/Payroll/AddPayrollAdvice",
        //    function () { $("#addModal").modal('toggle'); });

        $('#addNewBankAccountAdvice').click(function() {
            var addUrl = '@Url.Action("AddBankAccountAdvice", "Payroll")';
            $('#addDiv').load(addUrl, function () {
                $("#addModal").modal('toggle');
                $.validator.unobtrusive.parse("#addBankAccountAdvice");
                var d = new Date();
                startDate = d.getFullYear() + '-' + ('0' + (d.getMonth() + 1)).slice(-2) + '-01';
                document.getElementById("TransactionStartDate").value = startDate;
            });
        })

        var ConfirmEdit = function (PayrollAdviceId) {
            var editUrl = '/Payroll/EditBankAccountAdvice/' + PayrollAdviceId;
            $('#editDiv').load(editUrl, function () {
                $("#editModal").modal('toggle');
                $.validator.unobtrusive.parse("#editBankAccountAdvice");
            });
        }

        function getIcNumber() {
            //alert(id.value);
            $.ajax({
                url: "/Payroll/GetIcNumber",
                //data: { "id": id.value },
                type: "GET",
                dataType: "Json",
                data: { id: $("#PersonnelInformationId").val() },
                contentType: "application/json",
                success: function (icNumber) {
                    document.getElementById("ICNumber").value = (icNumber);
                    //$('#addBankAccountAdvice input[name="ICNumber"]').value = data.identityCardNumber;
                },
            });
        }

</script>
